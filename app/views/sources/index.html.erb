<h1>Sources</h1>
<table class="table table-bordered" style="margin: 20px;">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Name</th>
    <th scope="col">Url</th>
    <th scope="col">Url Prefix</th>
    <th scope="col">Active</th>
    <th scope="col">Source Page</th>
  </tr>
  </thead>
  <tbody>
    <% @sources.each do |source| %>
    <tr>
        <th><%= source.id %></th>
        <td><%= source.name %></td>
        <td><%= source.url %></td>
        <td><%= source.url_prefix %></td>
        <td><%= source.active %></td>
        <td><%= render source.source_pages %></td>
        <td><%= link_to "Add Source Page", source %></td>
    </tr>
    <% end %>
</table>

<a href="<%= new_source_path(@source) %>" style="text-decoration:none; margin: 10px 0px 0px 20px;">
  <input type="button" value="Add Source">
</a>



