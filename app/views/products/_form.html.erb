<%= form_with model: [ @product ] do |form| %>
    <div class="form-group">
      <div class="row">
        <div class="col">
          <%= form.select :status, Product.statuses.map(&:first), {prompt:'select'},{class: "form-control" }%>
        </div>
        <div class="col">
          <%= form.select :category_id, Category.all.pluck(:name,:id), {prompt:'select'},{class: "form-control" }%>
        </div>
      </div>
    </div><br>

    <div class="row">
      <div class="col">
        <%= link_to 'Back' , products_path, class: 'btn btn-outline-success' %>
        <%= form.submit class: 'btn btn-outline-primary' %>
      </div>
    </div>

<% end %>