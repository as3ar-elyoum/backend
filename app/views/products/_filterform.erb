<%= form_for(:filter, url: products_path, method: :get) do |form| %>
    <div class="form-group">
      <div class="row">
        <div class="col">
          <%= form.select :status, options_for_select(Product.statuses.map(&:first), params.dig(:filter, :status)), {prompt:'select'}, {class: "form-control" }%>
        </div>
        <div class="col">
          <%= form.select :category_id, options_for_select(Category.all.pluck(:name, :id), params.dig(:filter, :category_id)), {prompt:'select'}, {class: "form-control" }%>
        </div>
      </div>
    </div><br>

    <div class="row">
      <div class="col">
        <%= form.submit "Search", class: 'btn btn-outline-primary' %>
      </div>
    </div>

<% end %>